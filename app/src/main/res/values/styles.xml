<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red_primary</item>
        <item name="android:statusBarColor">@color/red_primary</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="background">@color/color_default_background</item>
        <item name="android:colorBackground">@color/color_default_background</item>
        <item name="android:windowBackground">@color/color_default_background</item>

        <item name="colorBackgroundDefault">@color/color_default_background</item>"
        <item name="colorTextPrimary">@color/white</item>
        <item name="colorTextSecondary">@color/colorPrimary</item>
        <item name="colorHintText">@color/smoke</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
<!--        <item name="android:windowBackground">@drawable/splash_screen_background</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="TextTitleMedium">
        <item name="android:textSize">@dimen/spacing_normal</item>
        <item name="lineHeight">@dimen/font_title_large</item>
    </style>

    <style name="TextTitleXLarge">
        <item name="android:textSize">@dimen/spacing_x_large</item>
        <item name="lineHeight">@dimen/font_title_large</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:background">@drawable/background_text_input</item>
        <item name="drawableStartCompat">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:textAppearance">@style/TextTitleMedium</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_middle</item>
        <item name="android:paddingBottom">@dimen/spacing_middle</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>